{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gomod",
    "schedule:monthly",
    ":label(renovate)"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": true
  },
  "dependencyDashboard": true,
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates without creating a PR",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
